<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Transcation"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:background="@color/back1">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="Name"
        android:textColor="@android:color/black"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="your name"
        android:id="@+id/showNameBtn"
        android:textSize="20dp"

        />
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="Account Number"
        android:textColor="@android:color/black"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="your Acc no."
        android:id="@+id/showAccBtn"
        android:textSize="20dp"
        />
    <TextView
        android:layout_marginTop="20dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="Account Balance"
        android:textColor="@android:color/black"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount"
        android:id="@+id/showAmountBtn"
        android:textSize="20dp"
        />

    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Amount :"
        android:textSize="15dp"
        android:textColor="@android:color/black"

        />
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/amtEdt"
        />
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="CREDIT"
        android:id="@+id/creditBtn"
        android:layout_marginTop="30dp"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="DEBIT"
        android:id="@+id/debitBtn"
        />


</LinearLayout>